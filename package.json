{
  "name": "markdown-inline-editor-vscode",
  "displayName": "Markdown Inline Editor",
  "version": "1.0.0",
  "description": "WYSIWYG inline markdown editor - hide syntax, focus on content",
  "license": "MIT",
  "author": "SeardnaSchmid",
  "publisher": "seardnaschmid",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/seardnaschmid/md-inline-editor-vscode.git"
  },
  "homepage": "https://github.com/seardnaschmid/md-inline-editor-vscode",
  "bugs": {
    "url": "https://github.com/seardnaschmid/md-inline-editor-vscode/issues"
  },
  "keywords": [
    "markdown",
    "wysiwyg",
    "inline",
    "editor",
    "preview",
    "syntax",
    "clean"
  ],
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Formatters",
    "Productivity",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdInline.toggleDecorations",
        "title": "Toggle Markdown Decorations",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mdInline.toggleDecorations",
          "when": "editorLangId == markdown || editorLangId == md || editorLangId == mdx",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "clean": "rimraf dist",
    "build": "tsc --project tsconfig.build.json && vsce package --out dist/extension.vsix",
    "deploy:prod": "npm run clean && npm run build && vsce publish --packagePath dist/extension.vsix --pat $AZURE_DEVOPS_TOKEN && ovsx publish dist/extension.vsix --pat $OPEN_VSX_TOKEN"
  },
  "dependencies": {
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^20.12.5",
    "@types/unist": "^3.0.0",
    "@types/vscode": "^1.88.0",
    "@vscode/vsce": "^2.26.0",
    "eslint": "^8.57.0",
    "ovsx": "^0.9.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.4"
  }
}
